@model AppSample.Admin.Models.AdminUsers.AdminUserAddViewModel

@{
    ViewBag.Title = "Добавление пользователя";
}

@Html.AntiForgeryToken()
@Html.HiddenFor(model => model.Id)

<hr />

@if (ViewBag.Error != null)
{
    <p class="text-danger">@ViewBag.Error</p>
}

@if (ViewBag.IsSuccess == true)
{
    <p class="text-success">Данные сохранены</p>
}

<div class="form-group col-md-12">
    @Html.LabelFor(model => model.Login, new { @class = "col-form-label col-md-2" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.Login, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group col-md-12">
    @Html.LabelFor(model => model.Role, new { @class = "col-form-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownListFor(m => m.Role,Model.RolesSelectList , new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })
    </div>
</div>



<div class="pt-3 form-group col-md-12">
    <div class="col-md-offset-2 col-md-10">
        <button type="submit" class="btn btn-primary" value="save" name="CommandTarget">Сохранить</button>
    </div>
</div>
